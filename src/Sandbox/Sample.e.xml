<Button xmlns="Elffy.UI" xmlns:x="Elffy.Markup.Extensions"
        x:builder="Sandbox.Sample" x:builderType="ui"
        HorizontalAlignment="Left" Background="Blue">
  <Grid Background="Red" Width="0.8*" Height="0.8*" RowDefinition="*,*,*,*,*" ColumnDefinition="100,*,*,*,100">
    <Button Background="Pink" Grid.Row="0" Grid.Column="0"/>
    <Button Background="Green" Grid.Row="1" Grid.Column="1"/>
    <Button Background="Purple" Grid.Row="2" Grid.Column="2"/>
    <Button Background="#FFC6FD" Grid.Row="2" Grid.Column="2" Margin="10" />
    <Button Background="Gray" Grid.Row="3" Grid.Column="3"/>
    <Button Background="White" Grid.Row="4" Grid.Column="4"/>
  </Grid>
</Button>
