<Button xmlns="Elffy.UI" xmlns:x="Elffy.Markup.Extensions"
        x:builder="Sandbox.Sample" x:builderType="ui"
        Width="0.5*" Height="*" HorizontalAlignment="Left" Background="Blue">
  <Grid Background="Red" Width="0.5*" Height="0.5*" RowDefinition="*,*,*,*,*" ColumnDefinition="50,1*,1*,1*,50">
    <Button Background="Pink" Margin="0" Grid.Row="0" Grid.Column="0"/>
    <Button Background="Green" Margin="0" Grid.Row="1" Grid.Column="1"/>
    <Button Background="Purple" Margin="0" Grid.Row="2" Grid.Column="2"/>
    <Button Background="Gray" Margin="0" Grid.Row="3" Grid.Column="3"/>
    <Button Background="White" Margin="0" Grid.Row="4" Grid.Column="4"/>
  </Grid>
</Button>

